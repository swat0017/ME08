<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:fillViewport="true"
    android:gravity="center_horizontal"
    android:fadeScrollbars="false"
    android:scrollbarFadeDuration="0"

    android:scrollbarSize="10dp"

    tools:context="com.example.me08.InformationFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_weight="100"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="40dp"

            android:layout_marginTop="10dp"
            android:background="#0DD3CDCC"
            app:srcCompat="@drawable/icon5" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:background="#706D68"
            android:gravity="center"
            android:textColor="#FAF3F3"
            android:text="Category Analysis Information"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="425dp"
            android:layout_marginTop="10dp"
            android:layout_weight="100"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="#FF0000"
                android:gravity="center"
                android:text="Critically Endangered"
                android:textSize="20dp" />


            <com.github.mikephil.charting.charts.PieChart
                android:id="@+id/piechartcritical"
                android:layout_width="270dp"
                android:layout_height="270dp"

                android:layout_marginLeft="70dp"
                android:layout_marginTop="10dp"
                android:visibility="gone" />
            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="56dp"

                android:gravity="center"
                android:text="The most severely effected animals are in critically endangered category with risk of extinction"
                android:textSize="15dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="425dp"
            android:layout_marginTop="10dp"
            android:layout_weight="100"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="67dp"
                android:background="#FF9800"
                android:gravity="center"
                android:text="Endangered"
                android:textSize="20dp" />

            <com.github.mikephil.charting.charts.PieChart
                android:id="@+id/piechartendangered"
                android:layout_width="270dp"
                android:layout_height="270dp"

                android:layout_marginLeft="70dp"
                android:layout_marginTop="10dp"
                android:visibility="gone" />
            <TextView
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="56dp"
android:layout_marginLeft="5dp"
                android:gravity="center"
                android:text="Endangered category animals have borderline post fire risk of extinction"
                android:textSize="15dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="425dp"
            android:layout_marginTop="10dp"
            android:layout_weight="100"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="#FFEB3B"
                android:gravity="center"
                android:text="Vulnerable"
                android:textSize="20dp" />

            <com.github.mikephil.charting.charts.PieChart
                android:id="@+id/piechartvulnerable"
                android:layout_width="270dp"
                android:layout_height="270dp"

                android:layout_marginLeft="70dp"
                android:layout_marginTop="10dp"
                android:visibility="gone" />
            <TextView
                android:id="@+id/textView11"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginLeft="5dp"
                android:gravity="center"
                android:text="Vulnerable category animals are those which have serious threat to become endangered or critically endangered"
                android:textSize="15dp" />
        </LinearLayout>



    </LinearLayout>

</ScrollView>