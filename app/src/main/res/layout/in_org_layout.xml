<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".In_Org_Fragment">


    <TextView
        android:id="@+id/org_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#009688"

        android:gravity="center_horizontal"
        android:textAlignment="center"
        android:textSize="30dp"
        android:textStyle="bold" />
    <ImageView
        android:id="@+id/image_org"
        android:layout_width="325dp"
        android:layout_height="151dp"
        android:layout_gravity="center_horizontal"

        android:layout_marginTop="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contact Details"
        android:textStyle="bold"
        android:textSize="23dp"
        android:layout_marginLeft="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Office Phone"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp" />





    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"
        android:background="#DDE4E4"

        android:layout_marginLeft="15dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_phone_detail"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
android:textColor="#009688"

            android:layout_marginRight="5dp"
            android:background="#DDE4E4" />
        <TextView
            android:id="@+id/tv_phone_link"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"

            android:text="CALL" />

        <ImageView
            android:id="@+id/image_phone"
            android:layout_width="49dp"
            android:layout_height="match_parent"


            app:srcCompat="@drawable/ic_local_phone_black_24dp"
            tools:ignore="VectorDrawableCompat" />


    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Address:"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp" />

    <TextView
        android:id="@+id/tv_address_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"
        android:background="#DDE4E4"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="State:"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp" />
    <TextView
        android:id="@+id/tv_state_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"
        android:background="#DDE4E4"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Website:"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp" />

    <TextView
        android:id="@+id/tv_website_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginRight="15dp"
        android:background="#DDE4E4"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"/>

    <Button
        android:id="@+id/buttonmap"
        android:layout_width="220dp"
        android:layout_height="33dp"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="20dp"

        android:background="@drawable/roundbutton"
        android:text="Show in Google maps"
        android:textColor="#FFFFFF" />


</LinearLayout>