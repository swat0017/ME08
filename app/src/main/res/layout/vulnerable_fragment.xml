<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:fillViewport="true"
    android:gravity="center_horizontal"
    android:fadeScrollbars="false"
    android:scrollbarFadeDuration="0"

    android:scrollbarSize="10dp"

    tools:context="com.example.me08.InformationFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="425dp"

            android:orientation="vertical">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFEB3B"
                android:gravity="center"
                android:text="Vulnerable"
                android:textSize="20dp" />
            <TextView
                android:id="@+id/textView11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:gravity="center"
                android:text="Vulnerable category animals are those which have serious threat to become endangered or critically endangered"
                android:textSize="15dp" />

            <com.github.mikephil.charting.charts.BarChart
                android:id="@+id/piechartvulnerable"
                android:layout_width="match_parent"
                android:layout_height="350dp"
               android:layout_marginTop="10dp"
                android:visibility="gone" />
        </LinearLayout>



    </LinearLayout>

</ScrollView>